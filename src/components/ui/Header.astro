---
import MainNav from "@components/ui/MainNav.astro";
import Logo from "@assets/img/logo.svg";
interface Props {
    bgImage: string;
    subtitle: string;
}

const { bgImage, subtitle } = Astro.props;
---

<header class="min-h-72 relative pt-5 pb-72">
    <div
        style={{ backgroundImage: `url(${bgImage})` }}
        class="absolute inset-0 bg-center bg-cover"
    >
        <div class="absolute inset-0 bg-black/65"></div>
    </div>

    <div class="relative max-w-7xl mx-auto py-3">
        <div
            class="flex flex-col items-center lg:flex-row gap-3 lg:justify-between lg:px-7"
        >
            <a href="/">
                <Logo class="w-72" />
            </a>
            <MainNav />
        </div>
        <h1 class="text-4xl uppercase text-white text-center font-black mt-12">
            {subtitle}
        </h1>
    </div>
</header>
